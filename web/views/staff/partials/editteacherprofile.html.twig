<div ng-controller="profile" ng-init="getteacherdetails();">
	<div class="whole_container">
		<div class="left_bar_cont" >
			<div class="left_bar">
				<div class="left_bar_logo">
					<div class="left_logo">
						<img src="imgs/logo.png">
					</div>
					<div class="left_logo_text">
						Victor Garcia
					</div>
				</div>
				<div class="left_bar_content">
					<div class="left_bar_buttons">
						<ul class="bar_but_ul"> 
							<li>
								<button class="left_bar_but selected">Profile</button>
							</li>
							<li>
								<button class="left_bar_but">Ranking</button>
							</li>
							<li>
								<button class="left_bar_but">Feedback</button>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="center_container">
			<div class="profile_head_cont">
				<div class="row">
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
						<div class="pro_pic_upd_cont">
							<div class="pro_pic_cont">
							<input type="file" class="upload_text" placeholder="Avatar"  name="avatar_file" ngf-select="selectAvatar(teacher.avatarFile)" ng-model="teacher.avatarFile"/>
								<img src="{{profileImageUrl}}" class="pro_pic_upd_img">
							</div>							
							<button class="upload_pic_but" ng-click="uploadAvatar()">
								Upload Photo
							</button>
						</div>
					</div>
					<div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
						<div class="">
						  
						  <form id="profile" name="profile">
						  <div class="row">
						  	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
						    <div class="form-group">
						      <label for="name">Name </label>
						      <input type="text" class="form-control" id="email" placeholder="Enter name" name="name" ng-model="teacherstatus.name" required>
						    </div>
						    </div>
						    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
							   <div class="form-group">
						      		<label for="name">Sur Name </label>
						      <input type="text" class="form-control" id="email" placeholder="Enter surname" name="surname" 
						      ng-model="teacherstatus.surname"
						      required>
						    </div> 
						    </div>
						    </div>
						    <div class="row">
						  	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
						    <div class="form-group">
						      <label for="email">Email</label>
						      <input type="email" class="form-control" id="email" ng-model="teacherstatus.email" placeholder="Enter name" name="email" 
						      ng-model="teacherstatus.email" required>
						    </div>
						    </div>
						    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
							 <div class="form-group">
						      <label for="university">University</label>
						      <input type="text" class="form-control" id="email" placeholder="Enter university" name="university" 
						      ng-model="teacherstatus.university" required>
						    </div>
						    </div>
						    </div>
						    

						  </form>
						</div>
						
					</div>
					
				</div>
			</div> 
			<div class="profile_body_cont">
				<div class="row">
					<div class="col-lg-4 col-md-3 col-sm-12 col-xs-12">
						<div class="center_l_block">
							<div class="center_l_label">
								Tell the world who you are:
							</div>
							<div class="center_l_txt_cont">
								<textarea class="center_l_txtarea" ng-model="teacherstatus.about"></textarea>
							</div>
							<div class="center_l_label">
								Where do you teach?
							</div>
							<div class="center_l_txt_cont">
								<textarea class="center_l_txtarea" ng-model="teacherstatus.teach_place"></textarea>
							</div>
							<div class="center_l_label">
								Do you work?
							</div>
							<div class="center_l_txt_cont">
								<textarea class="center_l_txtarea" ng-model="teacherstatus.work"></textarea>
							</div>
							
						</div>	
															
					</div>
					</div>
					<div class="row">
						<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12" style="">
								<button class="upload_pic_but" ng-click="saveChanges()">
									save changes
								</button>
					    </div>
				    </div>
			</div>
		</div>
		<div class="profile_body_cont">
					<div class="row">					
						<div class="center_l_block">
						<div class="center_l_label">
								Update Password
							</div>
							  <div class="row">
							  <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
							    <div class="form-group">
							      <label for="email">Current Password</label>
							      <input type="password" class="form-control" id="email" placeholder="Enter current password" name="password" 
							       ng-model="password.currentPassword" ng-blur="checkCurrentPassword()" ng-required>
							    </div>
							    </div>
							  	<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
							    <div class="form-group">
							      <label for="email">Password</label>
							      <input type="password" class="form-control" id="email" placeholder="Enter new password" name="password" 
							      ng-model="password.password"  ng-required>
							    </div>
							    </div>
							    <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
								 <div class="form-group">
							      <label for="university">Confirm</label>
							      <input type="password" class="form-control" id="email" placeholder="Re - Enter password" name="confirm" 
							       ng-model="password.confirm" ng-required>
							    </div>
							    </div>
						    </div>
						    	<div class="row">
									<div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 " style="">
								<button class="upload_pic_but" ng-click="updatePassword()">
									update password
								</button>
					    </div>
				    </div>
						</div>	
					</div>									
				
			</div>
		</div>
	</div>
</div>
    display: inline-block;
    border-radius: 100%;
    width: 100px;
    height: 100px;
    margin: 0 auto;
    border: 0;
}

.upload_pic_but {
    display: inline-block;
    width: auto;
    padding: 5px 15px;
    background: #010e9b;
    color: #fff;
    border-radius: 9px;
    border: 0;
    outline: 0;

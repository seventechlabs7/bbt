<style type="text/css">

.left_bar_cont {
    display: inline-block;
    width: 100%;
    max-width: 300px;
    position: fixed;
    left: 0;
    top: 0;
    height: 100vh;
    background: #010e9b;
}

.left_bar {
    display: inline-block;
    width: 100%;
}

.left_bar_logo {
    display: inline-block;
    width: 100%;
    padding: 30px 0;
    text-align: center;
}

.left_logo {
    display: inline-block;
    width: 100%;
    max-width: 130px;
}

.left_logo > img {
    display: inline-block;
    width: 100%;
}

.left_logo_text {
    display: inline-block;
    width: 100%;
    padding: 10px 0;
    color: #fff;
}

.left_bar_content {
    display: inline-block;
    width: 100%;
    padding: 10vh 0;
}

.left_bar_buttons {
    display: inline-block;
    width: 100%;
    text-align: center;
}

ul.bar_but_ul,ul.bar_but_ul
 li {
    display: inline-block;
    width: 100%;
}

ul.bar_but_ul
 li {
    padding: 20px 0;

    border-radius: 7px;
    background: #fff;
    border: 0;
    width: 100%;
    max-width: 158px;
    color: #000;
    padding: 5px 30px;
    font-size: 15px;
    font-weight: bold;
    cursor: pointer;
    display:inline-block;
}
button.left_bar_but.selected
{
    background: #70AD47;
    color:#fff;
}

.profile_head_cont,.profile_body_cont {
    display: inline-block;
    width: 100%;
    padding-left: 300px;
    text-align: center;
}

.pro_pic_upd_cont {
    display: inline-block;
    width: 100%;
    padding: 20px;
}

.center_l_block, .center_l_label, .center_l_txt_cont,.center_l_txtarea {
    display: inline-block;
    width: 100%;
    text-align: center;

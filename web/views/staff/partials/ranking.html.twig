.center_l_label {
    text-align: left;
    padding: 5px;
    font-weight: 600;
}

textarea.center_l_txtarea {
    border-radius: 6px;
    resize: none;
    text-align: left;
    padding: 10px;
    outline: 0;
}

.center_l_txt_cont {
    padding: 15px;
}

.center_l_block {
    border: 1px solid #000;
    padding: 7px;

<div ng-controller="ranking" ng-init="init();">
	<div class="whole_container">
		<div class="left_bar_cont">
			<div class="left_bar">
				<div class="left_bar_logo">
					<div class="left_logo">
						<img src="imgs/logo.png">
					</div>
					<div class="left_logo_text">
						Victor Garcia
					</div>
				</div>
				<div class="left_bar_content">
					<div class="left_bar_buttons">
						<ul class="bar_but_ul"> 
							<li>
								<button class="left_bar_but selected">Profile</button>
							</li>
							<li>
								<button class="left_bar_but" ng-click="changeNav('ranking')">Ranking</button>
							</li>
							<li>
								<button class="left_bar_but">Feedback</button>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="center_container">
			<div class="profile_head_cont">
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
					<div class="form-group">
						<label for="sel1">Select Group</label>
						<select class="form-control" id="sel1" ng-model="currentGroupId" ng-change="loadRanking(currentGroupId)">
						<option ng-repeat="group in groups" value="{{group.id}}">{{group.group_name}}</option>
						</select>
					</div>
				</div>
			</div>
			<div class="row">
				<h1>Countdown Clock</h1>
					<div id="clockdiv">
					<div>
						<span class="days"></span>
						<div class="smalltext">Days</div>
					</div>
					<div>
						<span class="hours"></span>
						<div class="smalltext">Hours</div>
					</div>
					<div>
						<span class="minutes"></span>
						<div class="smalltext">Minutes</div>
					</div>
					<div>
						<span class="seconds"></span>
						<div class="smalltext">Seconds</div>
					</div>
				</div>
			</div>
				
			</div> 
			<div class="profile_body_cont">
				<div class="row">
					<table ng-table="tableParams" class="table table-bordered table-striped table-condensed">
      <tr ng-repeat="row in rankingList track by $index">
        <td data-title="'Position'" filter="{installationAt: 'text'}" sortable="'installationAt'">{{$index + 1}}</td>
        <td data-title="'Name'" filter="{adminEmail: 'text'}" sortable="'adminEmail'">{{row.username}}</td>
        <td data-title="'Amount'" filter="{adminEmail: 'text'}" sortable="'adminEmail'">{{row.amount}}</td>
        <td data-title="'Chat'" filter="{poweredBy: 'text'}" sortable="'poweredBy'"> <i class="fa fa-comments" aria-hidden="true" style=" color: blue;
    text-shadow: 1px 1px 1px #ccc;
    font-size: 1.5em;"></i> </td>
        <td data-title="'Feedback'" filter="{poweredByIcon: 'text'}" sortable="'poweredByIcon'">feedback</td>
        <td data-title="'Delete'" filter="{poweredByIcon: 'text'}" sortable="'poweredByIcon'"> <i class="fa fa-times-circle" aria-hidden="true" style=" color: red;
    text-shadow: 1px 1px 1px #ccc;
    font-size: 1.5em;"></i> </td>
      </tr>
    </table>

						

					</div>
				</div>
			</div>
		</div>
	</div>

</div>
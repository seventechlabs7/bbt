								<button class="left_bar_but" ng-click="changeNav('feedback')">Feedback</button>
							</li> -->
							<li>
								<a class="btn color" ng-click="logout()"><i class="fa fa-power-off" aria-hidden="true"></i>Logout</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="center_container main-content-section">
			<div class="profile_head_cont">
				<div class="row">
					<div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
						<div class="pro_pic_upd_cont">
							<div class="pro_pic_cont">
							<div class="image_and_select">
							<input type="file" class="upload_text" placeholder="Avatar" accept="image/jpg,image/jpeg,image/png"  name="avatar_file" ngf-select="selectAvatar(teacher.avatarFile)" ng-model="teacher.avatarFile"/>
								<img  ng-if="imageSelected" ngf-src="teacher.avatarFile" class="pro_pic_upd_img">
								<img ng-if="!imageSelected" src="{{profileImageUrl}}" class="pro_pic_upd_img">
							</div>
							</div>							
							<button class="upload_pic_but" ng-click="uploadAvatar()">
							<i class="fa fa-camera m-r-5"></i>
								Upload Photo
							</button>
						</div>
					</div>
					<div class="col-lg-8 col-md-7 col-sm-6 col-xs-12">
						<div class="unedit_cont">
							<ul class="unedit_ul"> 
								<li class="unedit_li name">
									{{teacherdetail.name}} {{teacherdetail.surname}}
								</li>
								<li class="unedit_li mail">
									{{teacherdetail.email}}
								</li>
								<li class="unedit_li university">
									{{teacherdetail.university}}
								</li>
							</ul>
						</div>
					</div>
					<div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
						<div class="setting-menu">	
						 <a ng-click="editProfile()"><i class="fa fa-gear"></i>Settings</a>		
						</div>						
					</div>
				</div>
			</div> 
			<div class="">
				<div class="row">
					<div class="col-lg-5 col-md-4 col-sm-12 col-xs-12">
						<div class="center_l_block">
							<div class="green_box">
						      <div class="row">
							    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
								 <h2>General Statistics</h2>
								</div>
						      	<div class="col-lg-7 col-md-8 col-sm-8 col-xs-6">
						      		<label>Number of Students</label>
									<span class="pull-right"><b>:</b></span>
						      	</div>
						      	<div class="col-lg-5 col-md-4 col-sm-4 col-xs-6">
						      		<p>{{report.count}}</p>
						      	</div>
						      	<div class="col-lg-7 col-md-8 col-sm-8 col-xs-6">
						      		<label>Total Number of Operations</label>
									<span class="pull-right"><b>:</b></span>
						      	</div>
						      	<div class="col-lg-5 col-md-4 col-sm-4 col-xs-6">
						      		<p>{{report.operations}}</p>
						      	</div>
						      	<div class="col-lg-7 col-md-8 col-sm-8 col-xs-6">
						      		<label>Total Profitability</label>
									<span class="pull-right"><b>:</b></span>
						      	</div>
						      	<div class="col-lg-5 col-md-4 col-sm-4 col-xs-6">
						      		<p>{{report.percentage}} %</p>
						      	</div>
						      	<div class="col-lg-7 col-md-8 col-sm-8 col-xs-6">
						      		<label>Total Benefits</label>
									<span class="pull-right"><b>:</b></span>
						      	</div>
						      	<div class="col-lg-5 col-md-4 col-sm-4 col-xs-6">
						      		<p>{{report.benefits}}</p>
						      	</div>

						      </div>
					     </div>							
						</div>										
					</div>
					<div class="col-lg-7 col-md-8 col-sm-12 col-xs-12">

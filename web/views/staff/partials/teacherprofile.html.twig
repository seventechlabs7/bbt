						<img src="imgs/logo.png">
					</div>
					<div class="left_logo_text">
						Victor Garcia
					</div>
				</div>
				<div class="left_bar_content">
					<div class="left_bar_buttons main-sidebar">
						<ul class="bar_but_ul"> 
							<li>
								<a class="btn color" ng-click="changeNav('profile')"><i class="fa fa-user" aria-hidden="true"></i>Profile</a>
							</li>
							<li>
								<a class="btn color" ng-click="changeNav('ranking')"><i class="fa fa-file-text" aria-hidden="true"></i>Ranking</a>
							</li>

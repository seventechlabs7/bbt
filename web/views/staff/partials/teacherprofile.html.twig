														<div class="col-lg-2 col-md-2 col-sm-2 col-xs-3">
															<div class="multi_comment_who">
																<div class="comment_who">
																	<div class="post_image small">
																		 <img src="http://dummyimage.com/50x50/f0f/fff" />
																	</div>
																	<p><span class="post_name bold">{{com.commentatorName}}</span></p> 
																</div>
															</div>
														</div>
														<div class="col-lg-10 col-md-10 col-sm-10 col-xs-9">
															<div class="commented">
																<p>{{com.name}}</p>
															</div>												
														</div>
														<div class="likes_section">
																<div class="post_line">
																<a href="javascript:void()" class="like_a" ng-click="postCommentLike(op.recordId,com.commentId)"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i></a> {{com.commentLikes.length}} 
																</div>
															</div>
													</div>			
												</div>
											</div>
										</div>										
									</div>
									

									<div class="multi_comment_comments">
										<ng-form id="commentForm" name="commentForm">
										<div class="comment_box">
											<div class="row">
												<div class="col-lg-10 col-md-7 col-sm-6 col-xs-12 p-r-0 p-l-0">
													<textarea rows="3" placeholder="Write a comment..." ng-model = "com.currentComment" name="comment" id="comment" ng-minlength="2" ng-maxlength="25" ng-submit="postComment(op.id,com.commentId)" required></textarea>
													<div ng-messages="commentForm.comment.$error" ng-show="commentForm.comment.$touched">
									      		 <div ng-messages-include="js/messages.html"></div>
											    </div>
												</div>
												
												<div class="col-lg-2 col-md-5 col-sm-6 col-xs-12 p-r-0 text-right">
													<button class="post_button" ng-click="postComment(op.recordId,com.currentComment)" ng-disabled="!commentForm.$valid">Post
													</button>
												</div>
											</div>
											 
										</div>
										</ng-form>
									</div>
								</div>
							</div>
							<div  class="" ng-if="timeLine.length == 0">
								<h4>No data available yet</h4
							</div>

						</div>
					


					</div>
				</div>
			</div>
		</div>
	</div>
